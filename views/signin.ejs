<div class="min-h-screen bg-black text-white grid md:grid-cols-2 relative">
    <!-- Gradient background (always present) -->
    <div class="fixed inset-0 bg-gradient-to-br from-purple-800 to-black md:relative md:block">
        <!-- Desktop header in gradient area -->
        <h1 class="text-xl font-bold absolute top-6 left-6 text-white hidden md:block"><a href="/">CBT Workbook</a></h1>
    </div>
    
    <!-- Content container -->
    <div class="relative w-full h-full md:col-start-2 z-10 flex flex-col">
        <!-- Mobile header -->
        <h1 class="text-xl font-bold p-6 text-white md:hidden"><a href="/">CBT Workbook</a></h1>
        
        <!-- Form container -->
        <div class="flex-grow flex flex-col justify-center p-6">
            <div class="w-full max-w-md bg-gray-900 md:bg-transparent p-6 rounded-xl shadow-lg md:shadow-none mx-auto">
                <h2 class="text-3xl font-bold">Sign In</h2>
                <p class="text-gray-400 mb-6">Welcome back! Sign in to continue.</p>

                <form class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium">Email Address/Username</label>
                        <div class="flex items-center bg-gray-800 p-3 rounded-lg mt-1">
                            <span class="text-gray-400">&#9993;</span>
                            <input id="usernameinput" type="email" placeholder="Your email/username" class="bg-transparent flex-1 outline-none ml-2 text-white">
                        </div>
                    </div>

                    <div>
                        <label class="block text-sm font-medium">Password</label>
                        <div class="flex items-center bg-gray-800 p-3 rounded-lg mt-1">
                            <span class="text-gray-400">&#128274;</span>
                            <input id="passwordinput" type="password" placeholder="Your password" class="bg-transparent flex-1 outline-none ml-2 text-white">
                        </div>
                    </div>

                    <button id="signinbutton" class="w-full bg-purple-600 py-3 rounded-lg text-white font-semibold hover:bg-purple-500">Sign In</button>
                </form>

                <p class="text-center text-gray-400 mt-4">Don't have an account? <a href="/auth/signup" class="text-purple-400">Sign Up.</a></p>

                <button id="oauth" class="w-full flex items-center justify-center bg-gray-700 py-3 rounded-lg mt-4 text-white hover:bg-gray-600 border border-gray-500">
                    <img src="/imgs/google-color.svg" class="h-5 w-5 mr-2" alt="Google">
                    Sign In With Google
                </button>
            </div>
        </div>
    </div>
</div>
<script src="/scripts/signins.js"></script>