<div class="min-h-screen bg-black text-white grid md:grid-cols-2 relative">
    <div class="fixed inset-0 bg-gradient-to-br from-purple-800 to-black md:relative md:block"></div>

    <div class="relative w-full h-full md:col-start-2 z-10 flex flex-col">
        <h1 class="text-xl font-bold p-6 text-white md:hidden"><a href="/">CBT Workbook</a></h1>

        <div class="flex-grow flex flex-col justify-center p-6">
            <div class="w-full max-w-md bg-gray-900 md:bg-transparent p-6 rounded-xl shadow-lg md:shadow-none mx-auto">
                <h2 class="text-3xl font-bold">Sign Up For Free.</h2>
                <p class="text-gray-400 mb-6">Let's sign up quickly to get started.</p>

                <form class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium">Username</label>
                        <div class="flex items-center bg-gray-800 p-3 rounded-lg mt-1">
                            <span class="text-gray-400">&#128100;</span>
                            <input id="upusername" type="text" placeholder="Your username"
                                class="bg-transparent flex-1 outline-none ml-2 text-white">
                        </div>
                    </div>

                    <div>
                        <label class="block text-sm font-medium">Email Address</label>
                        <div class="flex items-center bg-gray-800 p-3 rounded-lg mt-1">
                            <span class="text-gray-400">&#9993;</span>
                            <input id="upemail" type="email" placeholder="Your email"
                                class="bg-transparent flex-1 outline-none ml-2 text-white">
                        </div>
                    </div>

                    <div>
                        <label class="block text-sm font-medium">Password</label>
                        <div class="flex items-center bg-gray-800 p-3 rounded-lg mt-1">
                            <span class="text-gray-400">&#128274;</span>
                            <input id="uppass" type="password" placeholder="Your password"
                                class="bg-transparent flex-1 outline-none ml-2 text-white">
                        </div>
                        <p class="text-green-400 text-xs mt-1">Password strength: Strong</p>
                    </div>

                    <button id="signupbutton"
                        class="w-full bg-purple-600 py-3 rounded-lg text-white font-semibold hover:bg-purple-500">Sign
                        Up</button>
                </form>

                <p class="text-center text-gray-400 mt-4">Already have an account? <a href="/auth/signin"
                        class="text-purple-400">Sign In.</a></p>

                <button id="oauth"
                    class="w-full flex items-center justify-center bg-gray-700 py-3 rounded-lg mt-4 text-white hover:bg-gray-600 border border-gray-500">
                    <img src="/imgs/google-color.svg" class="h-5 w-5 mr-2" alt="Google">
                    Sign Up With Google
                </button>
            </div>
        </div>
    </div>
</div>
<script src="/scripts/signups.js"></script>